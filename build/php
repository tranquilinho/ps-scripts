#!/bin/bash

readonly service_cfg=${0%/scripts*}/etc/service.cfg

. ${service_cfg} && . ${scripts_base}/common

readonly pkg_name=php
readonly pkg_version=5.5.13
readonly url_base="http://es1.php.net/distributions/"
readonly expected_hash=32d0fc26fccdb249a918c0e01ffb7b82
readonly hasher=md5sum

install_prereq zlib "mandatory"
install_prereq pcre "mandatory"
install_prereq libxml2 "mandatory"
install_prereq apache "mandatory"

build_preconditions

./configure --prefix=${prefix} --with-apxs2=${usr_prefix}/httpd/bin/apxs --with-libxml-dir=${usr_prefix}/libxml2 --with-openssl=${usr_prefix}/openssl --with-pcre-regex=${usr_prefix}/pcre --with-mysql=mysqlnd --with-mysqli=mysqlnd --with-pdo-mysql=mysqlnd --with-zlib-dir=${usr_prefix}/zlib

# if apache-build libtool fails, replace it with php one
standard_install
