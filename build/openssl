#!/bin/bash

readonly service_cfg=${0%/scripts*}/etc/service.cfg

. ${service_cfg} && . ${scripts_base}/common

readonly pkg_name=openssl
readonly pkg_version=1.0.1h
readonly url_base=http://www.openssl.org/source/
readonly expected_hash=b2239599c8bf8f7fc48590a55205c26abe560bf8

build_preconditions

./config --prefix=${prefix} --shared | logalize $(configure_log)

standard_install
