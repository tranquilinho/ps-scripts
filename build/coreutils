#!/usr/bin/env bash

readonly service_cfg=${0%/scripts*}/etc/service.cfg

. ${service_cfg} && . ${scripts_base}/common

readonly pkg_name=coreutils
readonly pkg_version=8.25
readonly pkg_ext=tar.xz
readonly url_base=http://ftp.gnu.org/gnu/coreutils/

build_preconditions

export PATH=${usr_prefix}/pkg-config/bin:${PATH}

# export CC=${usr_prefix}/gcc/bin/gcc
# --with-openssl
./configure --prefix=${prefix}   

standard_install

