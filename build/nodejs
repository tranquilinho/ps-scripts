readonly url_base=https://nodejs.org/dist/${pkg_version}

#install_prereq zlib "mandatory"
#install_prereq clang "mandatory"

# debian_install nodejs
build_preconditions

./configure --shared-openssl-libpath=${usr_prefix}/openssl/lib --shared-zlib-libpath=${usr_prefix}/zlib/lib

