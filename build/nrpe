#!/bin/bash

readonly service_cfg=${0%/scripts*}/etc/service.cfg

. ${service_cfg} && . ${scripts_base}/common

readonly pkg_name=nrpe
readonly pkg_version=3.2.1
readonly url_base=https://vorboss.dl.sourceforge.net/project/nagios/nrpe-3.x/nrpe-${pkg_version}/

build_preconditions

spack load --dependencies openssl

./configure --prefix=${prefix} --sysconfdir=${etc_dir} --with-nagios-user=${service_user} --with-nagios-group=${service_user} --with-nrpe-user=${service_user} --with-nrpe-group=${service_user} 

standard_install all
