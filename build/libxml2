#!/bin/bash

# by now, use system libxml2

readonly service_cfg=${0%/scripts*}/etc/service.cfg

. ${service_cfg} && . ${scripts_base}/common

log "${info} installing libxml2"

apt-get install -y libxml2-dev  2>&1 | logalize ${log_dir}/apt.log

if [ $? -eq 0 ];then
    log "${success} libxml2 installed"
    status=0
else
    log "${critical} problem installing libxml2 server"
    status=2
fi

exit ${status}

