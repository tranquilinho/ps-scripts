#!/usr/bin/env bash

readonly service_cfg=${0%/scripts*}/etc/service.cfg

. ${service_cfg} && . ${scripts_base}/common

readonly pkg_name=tar
readonly pkg_version=1.28
readonly url_base=http://ftp.gnu.org/gnu/tar/

build_preconditions

#install_prereq bzip2 "mandatory"
#install_prereq xz "mandatory"

export PATH=${usr_prefix}/pkg-config/bin:${PATH}

# !!!! run configure as non-root user
./configure --prefix=${prefix}   --with-bzip2=${usr_prefix}/bzip2/bin/bzip2 --with-xz=${usr_prefix}/xz/bin/xz
# -gzip=PROG  --with-lzip=PROG  --with-lzma=PROG  --with-lzop=PROG 

standard_install

