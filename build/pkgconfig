#!/bin/bash

readonly service_cfg=${0%/scripts*}/etc/service.cfg

. ${service_cfg} && . ${scripts_base}/common

readonly pkg_name=pkg-config
readonly pkg_version=0.29
readonly url_base=https://pkg-config.freedesktop.org/releases/

build_preconditions

./configure --prefix=${prefix} --with-pc-path=${usr_prefix}/pkg-config --with-internal-glib  | logalize $(configure_log)

standard_install

