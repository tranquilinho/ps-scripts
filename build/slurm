#!/bin/bash

readonly service_cfg=${0%/scripts*}/etc/service.cfg

. ${service_cfg} && . ${scripts_base}/common

readonly pkg_name=slurm
readonly pkg_version=15.08.4
readonly url_base=http://www.schedmd.com/download/latest/
readonly pkg=${pkg_name}-${pkg_version}.tar.bz2

build_preconditions

install_prereq munge "mandatory"

./configure --prefix=${prefix} --sysconfdir=${etc_dir} --with-munge=${usr_prefix}/munge | logalize $(configure_log)

standard_install


