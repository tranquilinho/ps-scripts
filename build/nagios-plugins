#!/bin/bash

readonly service_cfg=${0%/scripts*}/etc/service.cfg

. ${service_cfg} && . ${scripts_base}/common

readonly pkg_name=nagios-plugins
readonly pkg_version=2.2.1
readonly url_base="http://nagios-plugins.org/download/"

build_preconditions

# !!!! check_ping fails while trying to spopen ping command. Running it with -vvv revelas that the command is empty (???)

spack load --dependencies openssl

./configure --prefix=${prefix} --sysconfdir=${etc_dir} --with-nagios-user=${service_user} --with-nagios-group=nagios | logalize $(configure_log)

standard_install
